{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "generator": "Ninja"
    },
    {
      "name": "base-clang",
      "inherits": "base",
      "environment": {
        "CXX": "clang++",
        "CC": "clang"
      }
    },
    {
      "name": "base-gcc14",
      "inherits": "base",
      "environment": {
        "CXX": "g++-14",
        "CC": "gcc-14"
      }
    },
    {
      "name": "dev",
      "inherits": "base-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "DEVELOPER_BUILD": "ON"
      }
    },
    {
      "name": "dev-gcc14",
      "inherits": ["base-gcc14", "dev"]
    },
    {
      "name": "dev-engine",
      "inherits": "dev",
      "cacheVariables": {
        "USE_PREBUILT_ENGINE": "OFF"
      }
    },
    {
      "name": "dev-engine-gcc14",
      "inherits": ["base-gcc14", "dev-engine"]
    },
    {
      "name": "dev-asan",
      "inherits": "dev",
      "cacheVariables": {
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "dev-asan-gcc14",
      "inherits": ["base-gcc14", "dev-asan"]
    },
    {
      "name": "tidy",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy"
      }
    },
    {
      "name": "tidy-werror",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--warnings-as-errors=*"
      }
    },
    {
      "name": "rel",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "QT_EMBEDDER_AOT": "ON"
      }
    },
    {
      "name": "rel-gcc14",
      "inherits": ["base-gcc14", "rel"]
    }
  ]
}
