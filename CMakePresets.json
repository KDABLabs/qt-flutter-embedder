{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "environment": {
        "CXX": "clang++",
        "CC": "clang"
      },
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "generator": "Ninja"
    },
    {
      "name": "dev",
      "inherits": "base",
      "description": "dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "DEVELOPER_BUILD": "ON"
      }
    },
    {
      "name": "dev-engine",
      "inherits": "dev",
      "cacheVariables": {
        "USE_PREBUILT_ENGINE": "OFF"
      }
    },
    {
      "name": "dev-asan",
      "description": "dev-asan",
      "inherits": "dev",
      "cacheVariables": {
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "tidy",
      "description": "clang-tidy",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy"
      }
    },
    {
      "name": "tidy-werror",
      "description": "clang-tidy with -Werror",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--warnings-as-errors=*"
      }
    },
    {
      "name": "rel",
      "inherits": "base",
      "description": "rel",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "QT_EMBEDDER_AOT": "ON"
      }
    }
  ]
}
